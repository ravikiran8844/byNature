<!-- /templates/customers/reset_password.liquid -->
<em-resetpass>
  <div class="wrapper">
    <div class="pure-g">
      <div class="pu-1-3"></div>
      <div class="pu-1-3 pu-ct">
        <div class="loginbase">
          <h2>Reset Password</h2>
          <p>Password must be 8 string length</p>
          {%-form 'reset_customer_password',id:"resetaccount"-%}
          {{ form.errors | default_errors }}
          <div class="error_messager"></div>
          <label for="password" class="hidden">Password</label>
          <input type="password" value="" class="text-ful" name="customer[password]" minlength="6" size="16" placeholder="Password"/>
          <label for="password_confirmation" class="hidden">Password Confirmation</label>
          <input type="password" value="" class="text-ful" name="customer[password_confirmation]" minlength="6" size="16" placeholder="Password Confirmation"/>
          <input type="button" class="button-full btn-reset" value="Reset Password"/>
          {%-endform-%}
        </div>
      </div>
    </div>
  </div>
</em-resetpass>
<script src="{{"account.js"|asset_url}}" type="text/javascript"></script>