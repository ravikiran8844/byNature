<div class="wrapper">
  <h1>{{ page.title }}</h1>
  <!-- /templates/page.liquid 
  https://codepen.io/Flatroy/pen/PoqpRjP
	-->
  <div class="grid">
    {% assign grid_item_width = 'grid__item large--two-eighths medium--one-half text-center' %}

    {% assign let = '' %}
    {% assign letss = '' %}
    {% assign letsssss = '' %}

    {%for pdt in shop.vendors %}

    {% assign letss = '' %}
    {% assign let1 = pdt | truncate: 1, "" %}

    {%if let == '' %}
    {% assign let = let | append : let1 %}    

    {% if letsssss contains let1 %}
    {% assign letsssss = '' %}
    {%else%}
    {% assign letss = let1 %}
    {%endif%}   

    {%else  %}

    {% if let contains let1 %}
    {% assign letsssss = '' %}
    {%else%}
    {% assign letss = let1 %}
    {% assign letsssss = letsssss | append : let1 %}
    {% assign let = '' %}
    {%endif%}

    {%endif%}    

    {%if letss != '' %}

    <div class="grid__item text-center">
      <!--         <p style="color:white;background-color:#2193b0;height: 30px;line-height: 2em;">{{letss}}</p> -->
      <p style="color:#7a7a7a;border:1px solid #dad3fd;background-color:#f3f1ff;height: 30px;line-height: 2em;">{{letss}}</p>
    </div>

    {%endif%}

    <div class="{{ grid_item_width }} text-left">
      <!--       <a href="{{pdt | url_for_vendor}}" target="_blank"> <p style="color:white;background-color:#6dd5ed;height: 100px;line-height: 7em;">{{pdt | upcase}}</p></a>       -->
      <a href="{{pdt | url_for_vendor}}" target="_blank"> <p style="color:#7a7a7a;">{{pdt | upcase}}</p></a>      
    </div>
    {%endfor%}
  </div>
</div>