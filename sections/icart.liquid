{% assign upsellProduct = section.settings.pro1 %}

  <div class="hs-container-swp  hs-automatic-recommend">
  {% if upsellProduct != blank %}

    <div class="hs-frequently-bought">
      <span>Frequently Bought Together</span>
    </div>


    <div data-ajax-cart-static-element class="hs-swipper-containter-cart hs-mode-dynamic" style="color: black;">
      <div class="hs-swiper-container swiper-container-automatic swiper-initialized swiper-horizontal swiper-pointer-events swiper-autoheight">
        <div class="hs-swiper-wrapper" style="height: 167px;">
          <div id="pro1" class="hs-swiper-slide" style="width: 390px; margin-right: 30px;">
            <div class="hs-content-product-slide-cart">
              <div class="hs-product-content-image-swipper ">
                <a href="{{upsellProduct.url}}" class="hs-product-link-image">
                  <img
                    loading="lazy"
                    src="{{upsellProduct.featured_image | img_url: 'medium'}}"
                    alt="{{upsellProduct.title}}"
                    width="100"
                    height="90"></a>
              </div>
              <div>

                <div class="hs-popup">
                  <div class="hs-title-swiper">
                    {{ upsellProduct.title }}
                  </div>
                  <div class="hs-content-all-upsell">
                    <div class="hs-content-price-swiper">
                      <div class="hs-compare-price-sw">
                        <span class="money">{{ upsellProduct.compared_at_price | money }}</span>
                      </div>
                      <div class="hs-price-sw">
                        <span class="money">{{ upsellProduct.price | money }}</span>
                      </div>
                    </div>

                    <div class="hs-upsell-add  hs-swiper-no-swiping">

                      {% form 'product', upsellProduct %}
                        <div style="display: none;">
                          <select name="id">
                            {% for variant in upsellProduct.variants %}
                              <option value="{{ variant.id }}" {% if variant == upsellProduct.selected_or_first_available_variant %}selected="selected"{% endif %}>
                                {{ variant.title }} - {{ variant.price | money }}
                              </option>
                            {% endfor %}
                          </select>
                          <input
                            type="text"
                            name="quantity"
                            min="1"
                            value="1">
                        </div>
                        <button onclick="document.getElementById('pro1').style='display:none';" type="submit" class="hs-upsell-add-to-cart btn hs-event-static">
                          <span class="hs-add--to--cart">ADD</span>
                        </button>
                      {% endform %}
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>

        </div>

      </div>
    </div>
  {% endif %}
</div>
</div>
</div>
 <!-- HS FOOTER LAYOUT -->
 {% if cart.item_count > 0 %}
 <div class="hs-footer-layout">

   <div class="hs-drawer-checkout">
     <div class="hs-drawer-content-checkout">
       <div class="hs-content-total-cart">

         <div class="hs-sub-total-cart-padding" style="padding-bottom: 10px;">
           <div class="hs-sub-total-cart">
             <div class="hs-text-subtotal">
               Subtotal
             </div>
             <div class="hs-mount-sub-total">
               <span class="hs_subtotal_compare_at_price"></span>
               <span class="hs_subtotal_discount_automatic"></span>
               <span class="hs_subtotal_amount ">
                 <span class="money" data-ajax-cart-section>{{ cart.total_price | money_with_currency }}</span>
               </span>
               <span class="hs_subtotal_amount_discount"></span>
             </div>
           </div>
         </div>

       </div>
       <form
         action="{{ routes.cart_url }}"
         method="post"
         class="my-cart">
         <div class="hs-finalize-purchase">



           <div class="hs-content-buttons">
             <div class="hs-content-checkout-button hs-button-100-w">
               <button
                 type="submit"
                 name="checkout"
                 class="hs-checkout-purchase checkout-x-buy-now-btn hs-button-100-w btn hs-event-static">
                 <span class="hs-add--to--cart">Checkout</span>
                 <span class="hs--loading">
                   <div class="hs-spinner"></div>
                 </span>
               </button>
             </div>
           </div>
           <span
             class="hs-continue-shopping hs-event-static"
             style="cursor:pointer;"
             data-ajax-cart-toggle-class-button="js-my-cart-open | remove">Continue Shopping</span>

         </div>
       </form>
     </div>
   </div>
   <div class="hs-product-option"></div>
 </div>
{% endif %}
</div>
</div>

<style>
  .hs-site-cart-popup-layout div {
    box-sizing: border-box!important;
    max-width: calc(100% + 0px);
}
</style>

