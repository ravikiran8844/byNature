              <input
                type="hidden"
                value="49900"
                class="">
              <span class="hs-compare-at-price">
                <span class="money">{{ item.original_price | money }}</span>
              </span>
              <span class="hs-price-total hs-variant-31987614875714-price-total hs-desktop">
                <span class="money">{{ item.final_price | money }}</span>
