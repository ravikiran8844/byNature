<div class="wrapper">
  <div class="pure-g">  
    <div class="pu-1-1">    
      <div class="psubs-title pu-lg-ct pu-xl-ct pu-xxl-ct">{{ section.settings.title }}</div>
    </div>
  </div>
  <div class="pure-g">  
    {%-for sects in section.blocks -%}
    <div class="pu-1-3"> 
      <label class="radio-img">
        <input type="radio" name="properties[productsubs]" value="{{sects.settings.product_subscription_title}}" />
        <div class="subsinner_wrapper">
          <div class="product_sub_title pu-lg-ct pu-xl-ct pu-xxl-ct">{{sects.settings.product_subscription_title}}</div>
        </div>
      </label>
    </div>
    {%-endfor-%}
  </div>
</div>
<style>
  .product_subs .psubs-title{
   font-size:1.6em;
   font-weight:700;
    padding:30px 0;
  }
  .product_subs .product_sub_title{
    font-size:1.2em;
    font-weight:700;
    padding:30px 0;    
  }
  .product_subs .subsinner_wrapper{
    background: #ffffff;
    padding: 20px;
    margin: 0;
  }
  .radio-img > input {
    display: none;
  }
  .radio-img > .image {
    cursor: pointer;
    border: 2px solid black;
  }
  .radio-img > input:checked + .subsinner_wrapper {
    border: 2px solid var(--colorPrimary);
  }  
</style>
{%-schema-%}
  {
    "name": "Product Subscription",
	"class":"product_subs",
	"tag": "section",
    "settings": [{
      "type": "text",
      "id": "title",
      "label": "Select Subscription",
      "default":"How often would you like to receive your coffee?"
    }],
    "blocks": [{
    "name":"product_subscription",
    "type":"productsubscription",
    "settings":[{
      "type":"text",
      "label":"Product Subscription Title",
      "id":"product_subscription_title"
      }]
    }]
  }
{%-endschema-%}