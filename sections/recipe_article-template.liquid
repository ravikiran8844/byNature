  {% if blog.comments_enabled? %}
  <div class="pure">
  <div class="pu-12">
  <h3 class="cmnt-cnt">{{ number_of_comments }} Comments</h3>
  {% paginate article.comments by 5 %}
  {% for comment in article.comments %}
  <div class="com-sec">
    <div class="cmnt-auth-av">
      <img src="{{ 'default.png'|asset_url }}">
    </div>
    <div class="com-box">
    <h5 class="com-auth">{{ comment.author }} </h5>
    <div>{{ comment.content }}</div>
    </div>
  </div>
  {% endfor %}
  </div>
  </div>
  {% if paginate.pages > 1 %}
  {{ paginate | default_pagination }}
  {% endif %}
  {% endpaginate %}
  <div class="blg-cmnt">
        <div class="blog-cmnt">

  <div class="pure-g">
    <h3 class="text-center">LEAVE A COMMENT</h3>
    {% form 'new_comment', article %}
    {{ form.errors | default_errors }}
    <div class="pu-sm-12">
    <label for="CommentAuthor">Name</label>
    <input type="text" name="comment[author]" id="CommentAuthor"  value="{{ form.author }}" autocapitalize="words">
    </div>
    <div class="pu-sm-12">
    <label for="CommentEmail">Email</label>
    <input type="email" name="comment[email]" id="CommentEmail"  value="{{ form.email }}" autocorrect="off" autocapitalize="off">
    </div>
    <div class="pu-12">
    <label for="CommentBody">Message</label>
    <textarea name="comment[body]" id="CommentBody" >{{ form.body }}</textarea>
    </div>
    <div class="pu-12">
    <input type="submit" value="Submit Your Comment" class="rev-btn">
    </div>
    {% endform %}
  </div>
  {% endif %}
</div>
