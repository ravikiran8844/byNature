<div class="wrapper">
  <div class="pure-g">
    <div class="pu-md-7 ">
      <h3 class="Faq-title">FAQs</h3>
      {%- for block in section.blocks -%}
			<div class="question" property="question">
				{{ block.settings.faq_question }}
			</div>
			<div class="answercont">
				<div class="answer" property="answer">
					<p>{{ block.settings.faq_answer }}</p>
				</div>
			</div>
      {%- endfor -%}
    </div>
    <div class="pu-md-5 ">
         <img src="{{ section.settings.faq_image | img_url:'large' }}">                              
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product FAQ Section",
    "class":"product_faq",
    "settings": [
          {
            "id":"faq_image",
            "type":"image_picker",
            "label":"Faq Image"
          }
        ],
    "blocks":[
      {
        "name":"FQAs Content",
        "type":"text",
      "settings": [
        {
       "id":"faq_question",
        "type":"text",
        "label":"FAQs Question"
        },
        {
       "id":"faq_answer",
        "type":"richtext",
        "label":"FAQs Answer"
        }
      ]
        
      }
      
    ]
   
  }
{% endschema %}
