<link href="{{-'index.css'|asset_url-}}" rel="stylesheet" type="text/css" media="all" />
<link href="{{-'glide.css'|asset_url-}}" rel="stylesheet" type="text/css" media="all" />
<div class="glide" id="home-slider">
    <div class="glide__track" data-glide-el="track">
      <div class="glide__slides">
        {%- for block in section.blocks -%}
        <div class="glide__slide">
          <a href="{{ block.settings.link }}">
          <picture>
            <source media="(min-width: 650px)" srcset="{{ block.settings.image_desk | img_url:'master' }}">
            <source media="(max-width: 649px)" srcset="{{ block.settings.image_mob | img_url:'master' }}">
            <img src="{{ block.settings.image | img_url:'master' }}" style="width:100%;">
          </picture>
          </a>
        </div>
        {%-endfor-%}
      </div>
    </div>
  </div>
<script src="{{-'glide.js'|asset_url-}}"></script>
<script src="{{-'index.js'|asset_url-}}" defer></script>


{% schema %}
  {
    "name": "Home Image Banner",
    "class":"home_image_banner",
    "blocks":[
      {
        "name":"Slide",
        "type":"slide",
    "settings": [
      {
        "type":"image_picker",
        "id":"image_desk",
        "label":"Slider Desktop Image"
      },
      {
        "type":"image_picker",
        "id":"image_mob",
        "label":"Slider Mobile Image"
      },
      {
        "type":"url",
        "id":"link",
        "label":"Image Link"
      }
    ]
      }
    ]
  }
{% endschema %}


{% javascript %}
   new Glide('#home-slider', {
	type: 'carousel',
	perView: 1,
    autoplay:5000,
	breakpoints: {
		560: {
			perView: 1
		},
      460: {
			perView: 1
		},
	}
}).mount();
{% endjavascript %}